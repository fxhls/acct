<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="/css/styles.css" >
        <link rel="stylesheet" href="/css/journalEntries.css" >
        <link rel="stylesheet" href="/css/tooltip.css" >
        <link rel="stylesheet" href="/css/tcharts.css" >
        <link rel="stylesheet" href="/css/tabs.css" >
        <script src="js/app.js"></script>
    </head>
    <body>
        {{>header}}
        <h1>Problem Set</h1>
    <div class="content">
    <div style="max-width: 90%;    margin: 0 auto;">
    <div class="tab no-print">
        <button class="tablinks" onclick="openTab(event, 'journalEntries')" id="defaultValue">Journal Entries</button>
        <button class="tablinks" onclick="openTab(event, 'tCharts')">T-Charts</button>
        <button class="tablinks" onclick="openTab(event, 'Tokyo')">Tables</button>
    </div>
    <div id="journalEntries" class="tabcontent">
        {{>journalEntries}}
    </div>

<div id="tCharts" class="tabcontent">
            {{>tcharts}}
</div>

<div id="Tokyo" class="tabcontent">
</div>
    </div>
    </div>
        {{>footer}}
        <script>
        function openTab(evt, tabName) {
        var i, tabcontent, tablinks;
        tabcontent = document.getElementsByClassName("tabcontent");
        for (i = 0; i < tabcontent.length; i++) {
            tabcontent[i].style.display = "none";
        }
        tablinks = document.getElementsByClassName("tablinks");
        for (i = 0; i < tablinks.length; i++) {
            tablinks[i].className = tablinks[i].className.replace(" active", "");
        }
        document.getElementById(tabName).style.display = "block";
        evt.currentTarget.className += " active";
        }

        document.getElementById("defaultValue").click();
        </script>
    </body>
</html>